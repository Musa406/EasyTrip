        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCHwJkO-fozxWPa4lMP2sp4Ytwhv01KStM"/>

        <activity android:name=".MapsActivity"></activity>
        <activity android:name=".OwnerVehicles" />
        <activity android:name=".AvailableVehicleList" />
        <activity android:name=".Signup" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserHomeInterface" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/config" />

        <activity android:name=".SearchAvailability" />
        <activity android:name=".ownerHome" />
        <activity android:name=".ManageDriver" />
