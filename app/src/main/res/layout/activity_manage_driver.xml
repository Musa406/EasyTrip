<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#383863"
    tools:context=".UserHomeInterface">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="180dp">


        <android.support.v7.widget.CardView
            android:id="@+id/addDriverId"
            android:layout_width="1dp"
            android:layout_height="203dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:clickable="true"
            app:cardCornerRadius="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgcolor"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="74dp"

                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_booked"
                    android:padding="10dp"
                    android:src="@drawable/ic_add_24dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#1E534E"

                    ></View>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:text="Add Driver"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <!--   second card view        -->
        <android.support.v7.widget.CardView
            android:id="@+id/removeDriverId"
            android:layout_width="2dp"
            android:layout_height="198dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"

            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgcolor"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="80dp"

                    android:layout_height="74dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_helpline"
                    android:padding="10dp"
                    android:src="@drawable/remove_driver_24dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#236972"

                    ></View>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:text="Remove Driver"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <!--Navbar linear layout,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,,-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            app:menu="@menu/navigation"/>

    </LinearLayout>

</LinearLayout>