<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="10"
    android:background="#1B364B  "

    tools:context=".SearchAvailability">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94CAE6"
            android:text="Pick Up "
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />



        <AutoCompleteTextView
            android:id="@+id/pickupID"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="40dp"
            android:hint="      Search "
            android:drawableLeft="@drawable/source"
            android:layout_marginBottom="30dp"
            android:background="#ffffff"
            android:textIsSelectable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94CAE6"
            android:text="Unload "
            android:textAlignment="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <AutoCompleteTextView
            android:id="@+id/destinatioID"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="40dp"
            android:hint="      Search"
            android:drawableLeft="@drawable/destination"
            android:background="#ffffff"
            android:layout_marginBottom="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="80dp"
            android:hint="        product description"
            android:background="#ffffff"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"

            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:weightSum="2"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#94CAE6"
                    android:gravity="center"

                    android:text="Time"
                    android:textSize="30dp"
                    />
                <Button
                    android:id="@+id/selectTimeId"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="please select"
                    android:background="#ffffff"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Date"
                    android:background="#94CAE6"
                    android:textSize="30dp"
                    />
                <Button
                    android:id="@+id/selectDateId"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="please select"
                    android:background="#ffffff"
                    />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/searchVehicleButtonId"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/signupxml"
            android:text="Search Truck"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>