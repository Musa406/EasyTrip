<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#C7C9CE"
    tools:context=".TripConfirmation">


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="300dp"
        android:background="@drawable/tripconfirmation_back"
        android:layout_height="400dp">




        <TextView
            android:textColor="#FDFCFC"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonhapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Successful"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

        <TextView
            android:textColor="#FF5722"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/tripID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Id:"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="#FF5722"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/NPid"
            android:text="VN"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />


        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/sourceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="source:"
            />
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/destID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dest:"
            />

        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/dateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date:"
            />
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/timeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time:"
            />
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="20dp"

            android:textSize="20dp"
            android:id="@+id/costID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost:  2000 tk."
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/okConfirmID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OK"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/buttonhapse"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        />
</LinearLayout>