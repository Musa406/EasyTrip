<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0c4be"
    android:orientation="vertical">



    <TextView
        android:id="@+id/createAccountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="#0A0A0A"

        android:textSize="30dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/nameId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000000"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mobileId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="Mobile no."
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="Email"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nationalID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="NID"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passwordId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/retypePassId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/signupinputstyle"
        android:hint="Retype password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#000000"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Select user"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/userTypeRadioGroupId"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/signupinputstyle"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/ownerRadioId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingRight="40dp"
            android:text="Owner"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/borrowerRadioId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Borrower"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <ProgressBar
        android:id="@+id/progressbarSignUpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="150dp" />

    <Button
        android:id="@+id/signUpDoneButtonId"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonhapse"
        android:text="Done"
        android:textColor="#FDFDFD"
        android:textSize="35dp"
        android:textStyle="normal" />

</LinearLayout>